---
import Layout from '../layouts/Layout.astro';

const testimonials = [
  {
    name: "Marie Dupont",
    role: "Propriétaire",
    content: "Une équipe professionnelle et à l'écoute. La qualité des menuiseries est exceptionnelle et l'installation a été parfaite.",
    image: "https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-4.0.3",
    rating: 5
  },
  {
    name: "Jean Martin",
    role: "Architecte",
    content: "Je travaille régulièrement avec Alusteel pour mes projets. Leur expertise et leur réactivité sont des atouts majeurs.",
    image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3",
    rating: 5
  },
  {
    name: "Sophie Lambert",
    role: "Décoratrice d'intérieur",
    content: "Des produits haut de gamme et un service client irréprochable. Je recommande vivement !",
    image: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3",
    rating: 5
  }
];
---

<Layout title="Témoignages" description="Découvrez les avis de nos clients satisfaits">
  <div class="pt-20">
    <!-- Hero Section -->
    <section class="relative py-20 bg-gradient-to-b from-gray-900 to-gray-800">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
            Ce que disent nos clients
          </h1>
          <p class="text-xl text-gray-300">
            Découvrez les retours d'expérience de nos clients satisfaits.
          </p>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8">
          {testimonials.map((testimonial) => (
            <div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
              <div class="flex items-center mb-6">
                <img 
                  src={testimonial.image} 
                  alt={testimonial.name}
                  class="w-16 h-16 rounded-full object-cover mr-4"
                />
                <div>
                  <h3 class="font-bold text-lg">{testimonial.name}</h3>
                  <p class="text-gray-600">{testimonial.role}</p>
                </div>
              </div>
              <div class="flex mb-4">
                {[...Array(testimonial.rating)].map(() => (
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                ))}
              </div>
              <p class="text-gray-600 italic">"{testimonial.content}"</p>
            </div>
          ))}
        </div>

        <!-- Call to Action -->
        <div class="mt-20 text-center">
          <h2 class="text-3xl font-bold mb-8">Vous aussi, partagez votre expérience</h2>
          <a href="/contact" class="inline-block bg-primary hover:bg-secondary text-white px-8 py-4 rounded-full text-lg font-semibold transition-all duration-300 transform hover:scale-105">
            Laisser un avis
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>