---
import Layout from '../layouts/Layout.astro';
import { homePage } from '../content/website-text';

const { hero, manufacturing, advantages } = homePage;
---

<Layout title="Accueil">
  <!-- Hero Section -->
  <section class="min-h-screen relative overflow-hidden">
    <!-- Background avec effet parallaxe -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
      <div class="absolute inset-0 opacity-30">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(138,183,123,0.1),transparent_50%)]"></div>
      </div>
    </div>

    <div class="relative container mx-auto px-4 pt-32 pb-20">
      <div class="max-w-4xl mx-auto">
        <div class="space-y-8 text-center sm:text-left">
          <h1 class="text-4xl sm:text-6xl lg:text-7xl font-bold text-white leading-tight">
            <span class="inline-block transform hover:scale-105 transition-transform duration-300">
              {hero.title}
            </span>
            <span class="block mt-2 text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary">
              {hero.subtitle}
            </span>
          </h1>
          
          <div class="space-y-6">
            <p class="text-xl sm:text-2xl text-gray-200 leading-relaxed">
              {hero.description1}
            </p>
            
            <p class="text-lg text-gray-300 leading-relaxed">
              {hero.description2}
            </p>
          </div>

          <div class="flex flex-col sm:flex-row gap-6 justify-center sm:justify-start pt-8">
            <a href="/contact" 
               class="group relative px-8 py-4 bg-primary hover:bg-secondary text-white text-lg font-semibold rounded-full overflow-hidden transition-all duration-300 transform hover:scale-105">
              <span class="relative z-10">{hero.buttons.contact}</span>
              <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-20 transition-opacity duration-300"></div>
            </a>
            <a href="/nos-chantiers" 
               class="group relative px-8 py-4 bg-white/10 text-white text-lg font-semibold rounded-full overflow-hidden backdrop-blur-sm transition-all duration-300 hover:bg-white/20">
              <span class="relative z-10">{hero.buttons.projects}</span>
              <div class="absolute inset-0 bg-primary opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Manufacturing Capabilities Section -->
  <section class="py-16 bg-gray-50 relative overflow-hidden">
    <div class="container mx-auto px-4 relative">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="space-y-6">
            <h2 class="text-3xl font-bold text-gray-900">
              {manufacturing.title}
            </h2>
            <p class="text-lg text-gray-700 leading-relaxed">
              {manufacturing.description1}
            </p>
            <p class="text-lg text-gray-700 leading-relaxed">
              {manufacturing.description2}
            </p>
            <div class="pt-4">
              <a href="/nos-metiers" class="inline-flex items-center text-primary font-semibold hover:text-secondary transition-colors">
                {manufacturing.linkText}
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </a>
            </div>
          </div>
          <div class="relative rounded-xl overflow-hidden shadow-xl">
            <img 
              src={manufacturing.image} 
              alt={manufacturing.imageAlt} 
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Avantages Section -->
  <section class="py-24 bg-white relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-gray-50 to-white"></div>
    
    <div class="container mx-auto px-4 relative">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-bold text-gray-900 mb-16 text-center">
          {advantages.title}
        </h2>

        <div class="grid gap-8 sm:grid-cols-2">
          {advantages.items.map((advantage) => (
            <div class="group p-6 rounded-2xl bg-white border border-gray-100 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              <div class="flex items-start gap-4">
                <div class="p-3 rounded-xl bg-primary/10 text-primary group-hover:bg-primary group-hover:text-white transition-colors duration-300">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={advantage.icon}/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-xl text-gray-900 group-hover:text-primary transition-colors duration-300">
                    {advantage.title}
                  </h3>
                  <p class="mt-2 text-gray-600">
                    {advantage.description}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="mt-16 text-center">
          <a href="/contact" 
             class="inline-flex items-center px-8 py-4 bg-primary hover:bg-secondary text-white text-lg font-semibold rounded-full transition-all duration-300 transform hover:scale-105 group">
            <span>{advantages.cta}</span>
            <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
</style>